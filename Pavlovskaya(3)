#include<stdio.h>
#include<stdlib.h>
#include<iostream>
int main()
{
    const int N = 8;
    double A[N][N];
    for (int i = 0; i < N; i++)
    {
        for (int j = 0; j < N; j++)
        {
            if (i == 5)
                A[i][j] = i - j;
            else
                A[i][j] = i > j ? i : j;
            std::cout << A[i][j] << " ";
        }
        std::cout << std::endl;
    }
 
    
 
    for (int i = 0; i < N; i++)
    {
        bool found = true;
        for (int j = 0; j < N; j++)
            if (A[i][j] != A[j][i])
            {
                found = false;
                break;
            }
        if (found)
            std::cout << "k = " << i << std::endl;
    }
 
    double sum = 0.0;
    for (int i = 0; i < N; i++)
        for (int j = 0; j < N; j++)
            if (A[i][j] < 0.0)
            {
                for (j = 0; j < N; j++)
                    sum += A[i][j];
                break;
            }
 
    std::cout << "Sum = " << sum << std::endl;
        
    system("pause");
    return 0;
}
